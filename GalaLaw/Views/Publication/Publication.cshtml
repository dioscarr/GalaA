@model GalaLaw.Models.PublicationModel
@{
    ViewBag.Title = "Publications";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@using DAL.Models;


<section class="about_content_slider">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="about_title text_uppercase">Publications</h2>
            </div>
        </div>
    </div>
</section>

<section class="bg_contact">
    <div class="container content">
        <div class="row">
            <div class="col-xs-12">
                <ol class="breadcrumb mobile_display_none">
                    <li><a href="~/Home">Home</a></li>
                    <li class="active">Publication</li>
                </ol>
                <h1 class="content_title_news">@Model.publication.Hearder</h1>
            </div>
        </div>
        <div class="row content_text">
            <div class="col-xs-8 content_global mobile_content_global">
                <p> @Html.Raw(@Model.publication.Content)</p><br>
                
                 <div class="publication_member">
                    @foreach (var item in @Model.publicationbooks)
                    {
                        <div class="col-xs-6 publication_member_block">
                            <div class="about_member_block">
                                <div class="">
                                    <div class="pull-left publication_member_person_photo">
                                        <img src="~/Images/publications/@item.Picture" alt="">
                                    </div>
                                    <div class="pull-right about_member_person_info publication_member_person_info">
                                        <p class="publication_title">@item.Title</p>
                                        @Html.Raw(@item.Desc)
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <br />
                <span>Receive a copy</span>
                <p>To receive a PDF copy of the books , please email Stacy Bess at <a href="mailto:@Model.publication.Email">@Model.publication.Email</a>.</p>

                <br />


                <div class="bio_top_title">
                    <div class="pull-left col-md-12 left_no_padding">
                        <h1 class="content_title_news"><span class="gazette_data text_uppercase "> </span> GALA GAZETTE</h1>
                        <hr/>
                    </div>

                        @foreach (var item in @Model.LastGazetteVolumes)
                        {
                            <div class="pull-left">
                                <a href="~/Publication/GazetteArchive?id=@item.Id"> <h1 class="content_title_news"><span class="gazette_data text_uppercase GazetteDate"> </span> GALA GAZETTE @item.GazetteVolume</h1></a>
                               
                                <br />
                            </div>

                        }

                    </div>





